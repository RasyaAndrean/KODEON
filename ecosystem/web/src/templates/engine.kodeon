// Simple template rendering engine

kelas MesinTemplate:
    fungsi inisialisasi():
        ini.template_cache = {}
    
    // Render a template with data
    fungsi render(template_nama, data):
        // In a real implementation, this would load and render templates
        buat template_konten = ini.muat_template(template_nama)
        buat hasil = ini.proses_template(template_konten, data)
        kembalikan hasil
    
    // Load template from file system
    fungsi muat_template(nama):
        // In a real implementation, this would read from the file system
        jika ini.template_cache[nama] bukan_tidak_ada:
            kembalikan ini.template_cache[nama]
        
        // Simulate loading a template
        buat template = "<h1>{{judul}}</h1><p>{{konten}}</p>"
        ini.template_cache[nama] = template
        kembalikan template
    
    // Process template with data
    fungsi proses_template(template, data):
        buat hasil = template
        
        // Replace template variables
        untuk setiap kunci dalam data:
            buat placeholder = "{{" + kunci + "}}"
            hasil = hasil.ganti_semua(placeholder, data[kunci])
        
        kembalikan hasil

// Create a singleton instance
buat mesin_template = MesinTemplate()

fungsi render_template(nama, data):
    kembalikan mesin_template.render(nama, data)

ekspor render_template