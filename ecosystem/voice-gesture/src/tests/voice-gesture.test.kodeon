  buat hasil1 = uji_VoiceGesture()
  tampilkan("")

  buat hasil2 = uji_IntiVoiceGesture()
  tampilkan("")

  buat hasil3 = uji_Komponen()
  tampilkan("")

  jika hasil1 dan hasil2 dan hasil3 {
    tampilkan("ğŸ‰ Semua test berhasil!")
