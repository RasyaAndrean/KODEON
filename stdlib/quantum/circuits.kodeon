// Create a new quantum circuit
fungsi buat_sirkuit(jumlah_qubit) {
    // Implementation would go here
    kembalikan {
        qubits: jumlah_qubit,
        gerbang: []
    }
}

// Add a gate to a circuit
fungsi tambah_gerbang(sirkuit, gerbang, qubit_indices) {
    // Implementation would go here
    sirkuit.gerbang.tambah({
        jenis: gerbang,
        qubit: qubit_indices
    })
    kembalikan sirkuit
}

