# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust files
[*.rs]
indent_size = 4

# JavaScript/TypeScript files
[*.js, *.ts, *.jsx, *.tsx]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# HTML files
[*.html]
indent_size = 2

# CSS files
[*.css]
indent_size = 2

# YAML files
[*.yml, *.yaml]
indent_size = 2
