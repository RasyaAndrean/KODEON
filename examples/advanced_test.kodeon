// Function demonstrating channel usage
fungsi kirim_data(ch, data):
    kirim(ch, data)

fungsi terima_data(ch):
    buat data = terima(ch)
    kembalikan data

// Function demonstrating null safety
fungsi aman_dari_null(nilai):
    // Using elvis operator to provide default value
    buat hasil = nilai ?: "Nilai default"
    kembalikan hasil

